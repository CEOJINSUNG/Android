                        android:id="@+id/wrap_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <GridView
                        android:id="@+id/left_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="2dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/wrap_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <GridView
                        android:id="@+id/left_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="2dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/wrap_seven"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
